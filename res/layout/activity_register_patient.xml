<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterPatientActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/btn_bck"
        />

    <TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/btn_bck"
        android:fontFamily="@font/interbold"
        android:text="Daftar"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="145dp"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt5"
        android:orientation="vertical"
        android:padding="30dp"
        android:id="@+id/ly1">
        
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/shape3"
            android:hint="Masukkan nama anda"
            android:textColorHint="#A1A8B0"
            android:fontFamily="@font/interreguler"
            android:paddingLeft="16dp"
            android:drawableLeft="@drawable/ic_account"
            android:drawablePadding="10dp"
            android:layout_marginBottom="12dp"
            android:id="@+id/edt1"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/shape3"
            android:hint="Masukkan email anda"
            android:textColorHint="#A1A8B0"
            android:fontFamily="@font/interreguler"
            android:paddingLeft="16dp"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:layout_marginBottom="12dp"
            android:id="@+id/edt2"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/shape3"
            android:hint="Masukkan password anda"
            android:textColorHint="#A1A8B0"
            android:fontFamily="@font/interreguler"
            android:paddingLeft="16dp"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="10dp"
            android:layout_marginBottom="12dp"
            android:id="@+id/edt3"
            />

        <CheckBox
            android:id="@+id/cb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saya setuju dengan Syarat dan Ketentuan Medics"
            android:fontFamily="@font/interreguler"
            android:paddingLeft="9dp"
            />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly1"
        android:layout_centerHorizontal="true"
        android:text="Daftar"
        android:fontFamily="@font/interbold"
        android:textColor="@color/white"
        android:width="350dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape1"
        android:id="@+id/btn5"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn5"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="26dp"
        android:id="@+id/ly2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak punya akun?"
            android:fontFamily="@font/interreguler"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:id="@+id/txt6"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk disini"
            android:textColor="@color/primaryColor"
            android:paddingLeft="5dp"
            android:textSize="15sp"
            android:id="@+id/txt7"
            />

    </LinearLayout>


</RelativeLayout>